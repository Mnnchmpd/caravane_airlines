<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2> Book your caravan 👇🏻 </h2>
    <h4>

       <div class="col-md-8">


          <%= simple_form_for [@product, @booking] do |f| %>
            <%= f.input :start_date, as: :string, placeholder: 'debut', required: false, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: false, placeholder: 'fin', input_html: {class: "datepicker"} %>
            <%= f.input :people %>
            <div class="col-md-8">
            <%= f.button :submit, "Book", class: "btn btn-dark btn-lg" %>
          <% end %>
      </h4>
  </div>
</div>

