<div class="dashboard">
  <h1>Welcome to your dashboard ! </h1>
  <div class="head">

    <h3>Your Caravans:</h3>

    <div class="rows-dashboard">
      <% current_user.products.each do |product| %>
            <%= cl_image_tag product.photo, height: 100, width: 150, crop: :fill %>
            <h3 class="card-title">
              <%= link_to product_path(product) do %>
                <%= "#{product.name}"%>
                <%= "#{product.description}" %>
                <%= "#{product.price}â‚¬" %>
              <% end %>
            </h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="head">

    <h3>Your Bookings:</h3>

    <div class="rows-dashboard">
      <% current_user.bookings.each do |booking| %>
            <%= cl_image_tag booking.product.photo, height: 100, width: 150, crop: :fill %>
            <h3>
                <%= "#{booking.start_date}"%>
                <%= "#{booking.end_date}"%>
                <%= "#{booking.people}" %>
              <%= link_to edit_booking_path(booking) do %>
              <%= "edit" %>
              <% end %>
              </h3>
              <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash"></i>
              <% end %>
              <!-- link_to "edit", edit_product_booking_path(booking) -->

        </div>
      <% end %>
    </div>
  </div>
</div>

