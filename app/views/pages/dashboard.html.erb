<div class="container">
  <h1>Welcome to your dashboard ! </h1>
  <div>
    <h2>My Bookings requests</h2>
    <% current_user.booking_requests.each do |request| %>
      <div>
        <%= request.product.name %>
      </div>
      <!-- dates de la requete -->
      <div>
        <p>Starts at <%= request.start_date.strftime('%e, %B, %Y') %></p>
        <p>Ends at <%= request.end_date.strftime('%e, %B, %Y') %></p>
      </div>
      <!-- statut des requetes -->
      <div>
        <%= request.status %>
        <% if request.status == 'pending' %>
          <%= link_to 'accept', booking_accept_path(request) %>
          <%= link_to 'decline', booking_decline_path(request) %>

        <% end %>
      </div>
    <% end %>

  </div>
  <div class="my_caravans">

    <p>Your Caravans:</p>

    <div class="cards">
      <% current_user.products.each do |product| %>
        <div class="container-b">
          <div class="card-category" role="img" style="width: 100%; height: 100%">
            <%= cl_image_tag product.photo, height: 300, width: 350, crop: :fill %>
            <p class="card-title">
              <%= link_to product_path(product) do %>
                <%= product.name%>
                <%= "#{product.description}" %>
               <%= "#{product.price}â‚¬ "%>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>


  <div class="my_bookings">

    <p>Your Bookings:</p>

    <div class="cards">
      <% current_user.bookings.each do |booking| %>
        <div class="container-b">
          <div class="card-category" role="img" style="width: 100%; height: 100%">
            <%= cl_image_tag booking.product.photo, height: 300, width: 350, crop: :fill %>
            <p class="card-title">
                <%= "#{booking.start_date}"%>
                <%= "#{booking.end_date}"%>
                <%= "#{booking.people}" %>
              <%= link_to edit_booking_path(booking) do %>
              <%= "edit" %>
              <% end %></p>
              <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fas fa-trash"></i>
              <% end %>



              <!-- link_to "edit", edit_product_booking_path(booking) -->
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

