
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to products_path, class: "navbar-brand" do %>
    <%= image_tag "lo" %>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
          <div class="navbar-gif-one">
            <%= link_to "#", class: "navbar-gif" do %>
                <%= image_tag "http://www.gifgratis.net/gifs_animes/caravane/6.gif" %>
            <% end %>
          </div>

         <div class="add-button">
            <% if policy(Product).create? %>
              <%= link_to "Add an offer", new_product_path, class: "nav-link" %>
            <% end %>
          </div>
        <li class="nav-item active">
          <%= link_to "My Dashboard", dashboard_path, class: "nav-link" %>
        </li>

        <li class="nav-item dropdown">
          <%= image_tag "Emerico.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>

      <% end %>

    </ul>
  </div>
</div>

