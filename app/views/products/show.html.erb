<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)); background: url(<%= image_path '5.jpg', crop: :fill %> )";>
  <div class="container">

      <div class="col-xs-12">

        <h3><%= @product.name %></h3>
      </div>

      <div class="col-sm-12 col-md-6">
        <table class="table table-bordered">

            <thead>
              <h4 class="text-show">
              <th>Description</th>
              <th>Price</th>
              <th>Address</th>
            </thead>
             </h4>
            <%# @products.each do |product| %>
            <tbody>
            <tr>
              <td><%=@product.description%></td>
              <td><%=@product.price%></td>
              <td><%=@product.address%></td>
              <td>
                <%= link_to product_path(@product), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
                <% if current_user.id == @product.user_id %>
                  <p> <%= link_to "edit", edit_product_path(@product) %></p>
                <% end %>
                </td>
              </tr>
             </tr>
          </tbody>
        </table>
         <%= cl_image_tag @product.photo, height: 400, width: 500, crop: :fill, class: 'avatar-show' %>
         <p><%= link_to "Back to all Caravan", root_path, class: "back-btn" %></p>
          <p><%= link_to "Book this Caravan", root_path, class: "back-btn" %></p>
      </div>
  </div>
    </div>
</div>

