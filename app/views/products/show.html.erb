
<div class="container-title-show">
<h2> Nice choice !</h2>
</div>
<div class="container-show-global">


  <div class="container-product-show">
    <div class="image-product-show">
      <%= cl_image_tag @product.photo, height: 380, width: 380, crop: :fill %>
    </div>
    <div class="card-product-infos">
        <div class="card-product-name-price">
          <h2><%= @product.name %></h2>
          <h2><%=@product.price %> â‚¬</h2>
        </div>
      <div class="product-show-address-description">
        <p><%= @product.address %></p>
      </div>
      <p><%=@product.description%></p>
    </div>
<%= link_to product_path(@product), method: :delete, data: { confirm: "Are you sure?" }, class: 'delete-btn' do %>
  <i class="fas fa-trash"></i>
<% end %>
<% if current_user.id == @product.user_id %>
  <p class="edit-button-show"><%= link_to "EDIT", edit_product_path(@product) %></p>
  </div>


  <div class="container-calendar-show">
    <%= render 'pages/calendar' %>
  </div>


</div>
<% end %>



