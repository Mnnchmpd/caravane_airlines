<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)); background: url(<%= image_path '5.jpeg', crop: :fill %> )";>
  <div class="container">




      <div class="col-xs-12">
        <h1><%= @product.name %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3></h3>
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Address</th>
            </thead>
            <%# @products.each do |product| %>
            <tr>
              <td><%=@product.name %></td>
              <td><%=@product.description%></td>
              <td><%=@product.price%></td>
              <td><%=@product.address%></td>
              <td>
                <%= link_to product_path(@product), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
                <p> <%= link_to "edit", edit_product_path(@product) %></p>
                </td>
              </tr>
             </tr>
          </tbody>
        </table>
         <%= cl_image_tag @product.photo, height: 300, width: 400, crop: :fill %>
         <p><%= link_to "Back to all Caravan", root_path %></p>
          <p><%= link_to "Book this Caravan", root_path %></p>
      </div>
        <div class="col-sm-6">
      <h3>Book this Caravan</h3>
      </div>

  </div>
    </div>
</div>
