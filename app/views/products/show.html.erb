  <div class="container">

      <div class="col-xs-12">

        <h3><%= @product.name %></h3>
      </div>

      <div class="col-sm-12 col-md-6">
        <table class="table table-bordered">


              <div class="text-show">
              <h4> Description : <%=@product.description%></h4>
              <h4>Price <%=@product.price%></h4>
              <h4>Address <%=@product.address%></h4>
              </div>

              <%= cl_image_tag @product.photo, height: 400, width: 500, crop: :fill, class: 'avatar-show' %>


            <%# @products.each do |product| %>
             <%= link_to product_path(@product), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
                <% if current_user.id == @product.user_id %>
                  <p> <%= link_to "edit", edit_product_path(@product) %></p>
                <% end %>
          </tbody>
        </table>

        <%= simple_form_for [@product, @booking] do |f| %>
          <%= f.input :date %>
          <%= f.input :people %>


          <%= f.submit "Book now", class: "btn btn-primary" %>

        <% end %>

         <p><%= link_to "Back to all Caravan", root_path, class: "back-btn" %></p>
      </div>
  </div>
    </div>


