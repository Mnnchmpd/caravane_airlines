<div class="container" >
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center my-5">Add a new Caravan</h1>

        <%= simple_form_for @product do |f| %>
        <%= f.input :name%>
        <%= f.input :description%>
        <%= f.input :address%>
        <%= f.input :price%>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
