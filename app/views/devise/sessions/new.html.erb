<div class="sign-up" style="background-image: url(<%= image_path '3.jpg'%> )";>
<div class="col-md-4">

      <h2>Log in</h2>

          <h4>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="new-form-control">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

              </div>
               <div class="back-btn">
                   <%= f.button :submit, "Log in" %>
              </div>
            <% end %>


              </div>
          </h4>
        <div class="back-btn" >
        <%= link_to "Forgot your password?", registration_path(resource_name) %>
        </div>
</div>
</div>


